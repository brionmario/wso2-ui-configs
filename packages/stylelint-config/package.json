{
  "name": "@wso2/stylelint-config",
  "version": "0.1.0",
  "description": "Shareable Stylelint configuration used in WSO2 code bases.",
  "keywords": [
    "stylelint",
    "shareable-config",
    "frontend-tooling"
  ],
  "homepage": "https://tooling.wso2.com",
  "bugs": {
    "url": "https://github.com/wso2/ui-configs/issues"
  },
  "license": "Apache-2.0",
  "author": "WSO2",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/wso2/ui-configs",
    "directory": "packages/stylelint-config"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,cjs,css,json,md,mdx,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,json,md,mdx,yml}\"",
    "lint": "eslint . --max-warnings 0"
  },
  "peerDependencies": {
    "stylelint": ">=14.0.0",
    "typescript": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "postcss-scss": "^4.0.5",
    "stylelint-config-standard-scss": "^6.1.0"
  },
  "devDependencies": {
    "@wso2/eslint-plugin": "workspace:^",
    "@wso2/prettier-config": "workspace:^",
    "eslint": "^8.19.0",
    "prettier": "^2.8.0",
    "stylelint": "^14.15.0"
  }
}
