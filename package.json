{
  "name": "@wso2/ui-configs-workspace",
  "version": "0.1.0",
  "description": "Shareable configurations to maintain consistency across WSO2 UI code bases.",
  "keywords": [
    "eslint",
    "stylelint",
    "prettier"
  ],
  "homepage": "https://tooling.wso2.com",
  "bugs": {
    "url": "https://github.com/wso2/ui-configs/issues"
  },
  "license": "Apache-2.0",
  "author": "WSO2",
  "repository": {
    "type": "git",
    "url": "https://github.com/wso2/ui-configs"
  },
  "scripts": {
    "build": "nx run-many --target=build --parallel",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,cjs,css,json,md,mdx,yml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,json,md,mdx,yml}\"",
    "lint": "nx run-many --target=lint --parallel",
    "test": "nx run-many --target=test --parallel",
    "typecheck": "nx run-many --target=typecheck --parallel"
  },
  "dependencies": {},
  "devDependencies": {
    "@wso2/prettier-config": "*",
    "nx": "15.3.3",
    "prettier": "^2.6.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "private": true
}
